        "web-vitals": "^2.1.0"
    },
    "scripts": {
        "start": "yarn remove:conflicts && react-app-rewired start",
        "build": "yarn remove:conflicts && react-app-rewired build",
        "test": "yarn remove:conflicts && react-app-rewired test",
        "test-report-coverage": "yarn remove:conflicts && react-app-rewired test --coverage --watchAll",
        "eject": "react-scripts eject",
        "generate:defs-meta": "yarn generate:defs && yarn generate:meta",
        "remove:conflicts": "rimraf ./node_modules/@polkadot/api/augment/*.d.ts",
        "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --input ./src/logion-chain/interfaces/ --package ../interfaces",
        "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --endpoint ws://localhost:9944 --output src/logion-chain/interfaces/ --package ../interfaces"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@polkadot/typegen": "^6.1.1",
        "@testing-library/dom": "^8.7.0",
