        "uuid": "^8.3.2",
        "web-vitals": "^2.1.0"
    },
    "scripts": {
        "start": "yarn remove:conflicts && react-scripts start",
        "build": "yarn remove:conflicts && react-scripts build",
        "test": "yarn remove:conflicts && react-scripts test --transformIgnorePatterns \"/node_modules/(?!(@polkadot|@babel)/).*\"",
        "test-report-coverage": "yarn remove:conflicts && react-scripts test --transformIgnorePatterns \"/node_modules/(?!(@polkadot|@babel)/).*\" --coverage --watchAll",
        "eject": "react-scripts eject",
        "generate:defs-meta": "yarn generate:defs && yarn generate:meta",
        "remove:conflicts": "rimraf ./node_modules/@polkadot/api/augment/*.d.ts",
        "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --input ./src/logion-chain/interfaces/ --package ../interfaces",
        "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --endpoint ws://localhost:9944 --output src/logion-chain/interfaces/ --package ../interfaces",
        "pre-release": "scripty"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not ie <= 99",
            "not android <= 4.4.4",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@babel/plugin-syntax-flow": "^7.16.5",
        "@babel/plugin-transform-react-jsx": "^7.16.5",
