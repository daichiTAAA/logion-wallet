        "@types/react-test-renderer": "^17.0.1",
        "@types/sha.js": "^2.4.0",
        "@types/sjcl": "^1.0.30",
        "@types/uuid": "^8.3.1",
        "http-proxy-middleware": "^2.0.1",
        "moq.ts": "^7.3.4",
        "node-sass": "^6.0.1",
        "react-app-rewired": "^2.1.8",
        "react-scripts": "^4.0.3",
        "react-test-renderer": "^17.0.2",
        "ts-node": "^10.2.1",
        "typescript": "^4.1.2"
    }
}
